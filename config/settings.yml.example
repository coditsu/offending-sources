defaults: &defaults
  client_id: <%= ENV['CLIENT_ID'] %>

  errbit:
    project_id: <%= ENV['ERRBIT_PROJECT_ID'] %>
    project_key: <%= ENV['ERRBIT_PROJECT_KEY'] %>
    host: <%= ENV['ERRBIT_HOST'] %>

  kafka:
    seed_brokers: <%= ENV['KAFKA_SEED_BROKERS'].split(',') %>
    offset_commit_threshold: 1

development:
  <<: *defaults

test:
  <<: *defaults

production:
  <<: *defaults
